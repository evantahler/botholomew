{
  "name": "botholomew-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Botholomew - The Greatest Agent Framework (Monorepo)",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"bun run dev:backend\" \"bun run dev:frontend\"",
    "dev:backend": "cd backend && bun run dev",
    "dev:frontend": "cd frontend && bun run dev"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
