{
  "name": "botholomew-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Botholomew - The Greatest Agent Framework (Monorepo)",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "bun run concurrently --kill-others --prefix name --names ðŸ’»,ðŸŽ¨ \"bun run dev:backend\" \"bun run dev:frontend\"",
